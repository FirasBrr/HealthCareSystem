{% extends 'base.html.twig' %}

{% block title %}MedicalApp - Upload Prescription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Reuse your doctor dashboard CSS variables */
        :root {
            --primary: #2c7be5;
            --primary-light: #e3ebf8;
            --primary-dark: #1a68d1;
            --secondary: #6e84a3;
            --success: #00d97e;
            --success-light: #e6f9f0;
            --warning: #f6c343;
            --warning-light: #fef8e6;
            --danger: #e63757;
            --danger-light: #fce9ec;
            --info: #39afd1;
            --info-light: #eaf5f9;
            --light: #f9fbfd;
            --dark: #12263f;
            --gray-100: #f8f9fa;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
            --gray-400: #ced4da;
            --gray-500: #adb5bd;
            --gray-600: #6c757d;
            --gray-700: #495057;
            --gray-800: #343a40;
            --gray-900: #212529;
            --prescription: #9b59b6;
            --prescription-light: #f3e8f7;
            --prescription-dark: #8e44ad;
            --sidebar-bg: #ffffff;
            --card-bg: #ffffff;
            --body-bg: #f5f7fb;
            --gradient-primary: linear-gradient(135deg, #2c7be5 0%, #1a68d1 100%);
            --gradient-prescription: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
            --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
            --border-radius: 0.75rem;
            --border-radius-sm: 0.5rem;
            --transition: all 0.3s ease;
        }

        body {
            background-color: var(--body-bg);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        /* Sidebar Navigation - Same as doctor dashboard */
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            border-right: 1px solid var(--gray-200);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .doctor-avatar {
            width: 50px;
            height: 50px;
            background: var(--gradient-primary);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .doctor-info h6 {
            margin-bottom: 0.25rem;
            font-weight: 600;
        }

        .doctor-info small {
            color: var(--gray-600);
            font-size: 0.85rem;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem;
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: 2rem;
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--gray-600);
            letter-spacing: 0.5px;
            margin-bottom: 1rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--gray-700);
            text-decoration: none;
            margin-bottom: 0.5rem;
            transition: var(--transition);
            font-weight: 500;
        }

        .nav-item:hover {
            background: var(--primary-light);
            color: var(--primary);
            transform: translateX(5px);
        }

        .nav-item.active {
            background: var(--gradient-primary);
            color: white;
            box-shadow: 0 4px 12px rgba(44, 123, 229, 0.3);
        }

        .nav-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            background: var(--gray-100);
            color: var(--gray-600);
            transition: var(--transition);
        }

        .nav-item:hover .nav-icon {
            background: white;
        }

        .nav-item.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid var(--gray-200);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--danger);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

        .logout-btn:hover {
            background: var(--danger-light);
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 2rem;
            max-width: calc(100% - 280px);
        }

        /* Top Header */
        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .header-left h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .header-left p {
            color: var(--gray-600);
            margin: 0;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .date-badge {
            background: var(--primary-light);
            color: var(--primary);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .notification-btn {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--gray-100);
            border: none;
            color: var(--gray-600);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            transition: var(--transition);
        }

        .notification-btn:hover {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--danger);
            color: white;
            font-size: 0.7rem;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Dashboard Section */
        .dashboard-section {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-header h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }

        /* Appointment Info Card */
        .appointment-info-card {
            background: var(--gradient-prescription);
            color: white;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

        .appointment-info-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 200%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000" opacity="0.1"><path fill="white" d="M500,250c138,0,250,112,250,250S638,750,500,750S250,638,250,500S362,250,500,250z"/></svg>') repeat;
        }

        .appointment-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
            position: relative;
            z-index: 2;
        }

        .patient-avatar-large {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 1.25rem;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .patient-info h4 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: white;
        }

        .patient-info p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.9rem;
            margin: 0;
        }

        .appointment-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            position: relative;
            z-index: 2;
        }

        .detail-item {
            background: rgba(255, 255, 255, 0.1);
            border-radius: var(--border-radius-sm);
            padding: 1rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .detail-label {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 0.5rem;
            display: block;
        }

        .detail-value {
            font-weight: 600;
            color: white;
            font-size: 1.1rem;
        }

        /* Upload Form */
        .upload-form-card {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* File Upload */
        .file-upload-wrapper {
            position: relative;
            margin-bottom: 1rem;
        }

        .file-upload-input {
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
            z-index: 2;
        }

        .file-upload-label {
            display: block;
            padding: 3rem 2rem;
            border: 2px dashed var(--gray-300);
            border-radius: var(--border-radius);
            text-align: center;
            background: var(--gray-100);
            transition: var(--transition);
            cursor: pointer;
            position: relative;
            z-index: 1;
        }

        .file-upload-label:hover {
            border-color: var(--prescription);
            background: var(--prescription-light);
            transform: translateY(-2px);
        }

        .file-upload-label.dragover {
            border-color: var(--prescription);
            background: var(--prescription-light);
            border-style: solid;
        }

        .upload-icon {
            font-size: 3rem;
            color: var(--gray-500);
            margin-bottom: 1rem;
            transition: var(--transition);
        }

        .file-upload-label:hover .upload-icon {
            color: var(--prescription);
        }

        .upload-text h4 {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--dark);
        }

        .upload-text p {
            color: var(--gray-600);
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .btn-browse {
            background: var(--gray-200);
            color: var(--gray-700);
            padding: 0.5rem 1.5rem;
            border-radius: var(--border-radius-sm);
            font-weight: 500;
            transition: var(--transition);
            border: none;
        }

        .btn-browse:hover {
            background: var(--gray-300);
            color: var(--dark);
        }

        /* File Preview */
        .file-preview {
            display: none;
            padding: 1rem;
            background: var(--success-light);
            border-radius: var(--border-radius-sm);
            border: 1px solid var(--success);
            margin-top: 1rem;
        }

        .file-preview.show {
            display: block;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .file-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .file-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
        }

        .file-icon.pdf {
            background: var(--danger);
        }

        .file-icon.image {
            background: var(--primary);
        }

        .file-icon.other {
            background: var(--prescription);
        }

        .file-details h5 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: var(--dark);
        }

        .file-details p {
            color: var(--gray-600);
            font-size: 0.85rem;
            margin: 0;
        }

        /* Form Controls */
        .form-control, .form-select, textarea.form-control {
            border-radius: var(--border-radius-sm);
            border: 1px solid var(--gray-300);
            padding: 0.75rem;
            font-size: 0.9rem;
            transition: var(--transition);
            background: var(--card-bg);
        }

        .form-control:focus, .form-select:focus, textarea.form-control:focus {
            border-color: var(--prescription);
            box-shadow: 0 0 0 0.2rem var(--prescription-light);
            outline: none;
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .form-text {
            color: var(--gray-600);
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--gray-200);
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: var(--border-radius-sm);
            font-weight: 500;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--prescription);
            color: white;
        }

        .btn-primary:hover {
            background: var(--prescription-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(155, 89, 182, 0.3);
        }

        .btn-outline-secondary {
            background: transparent;
            border: 1px solid var(--gray-300);
            color: var(--gray-700);
        }

        .btn-outline-secondary:hover {
            background: var(--gray-100);
            color: var(--dark);
        }

        /* Flash Messages */
        .alert {
            border-radius: var(--border-radius-sm);
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 1.5rem;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .sidebar {
                width: 250px;
            }
            .main-content {
                margin-left: 250px;
                max-width: calc(100% - 250px);
            }
        }

        @media (max-width: 992px) {
            .dashboard-wrapper {
                flex-direction: column;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: static;
                margin-bottom: 1rem;
            }
            .main-content {
                margin-left: 0;
                max-width: 100%;
                padding: 1rem;
            }
            .appointment-details {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .top-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            .header-right {
                width: 100%;
                justify-content: space-between;
            }
            .form-actions {
                flex-direction: column;
            }
            .btn {
                width: 100%;
                justify-content: center;
            }
            .file-upload-label {
                padding: 2rem 1rem;
            }
        }
    </style>
    <!-- Add Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="dashboard-wrapper">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="doctor-avatar">
                    {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
                </div>
                <div class="doctor-info">
                    <h6>Dr. {{ app.user.firstName }} {{ app.user.lastName }}</h6>
                    <small>{{ app.user.doctor.specialty ?? 'Medical Professional' }}</small>
                </div>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="{{ path('doctor_dashboard') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        Dashboard
                    </a>
                    <a href="{{ path('doctor_appointments') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        Appointments
                    </a>
                    <a href="{{ path('doctor_prescriptions') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-file-prescription"></i>
                        </div>
                        Prescriptions
                    </a>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Schedule</div>
                    <a href="{{ path('doctor_availability') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        Availability
                    </a>
                    <a href="{{ path('doctor_patients') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-user-friends"></i>
                        </div>
                        My Patients
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('app_logout') }}" class="logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Header -->
            <div class="top-header">
                <div class="header-left">
                    <h1>Upload Prescription</h1>
                    <p>Upload prescription file for patient</p>
                </div>
                <div class="header-right">
                    <div class="date-badge">
                        <i class="fas fa-calendar-day me-2"></i>{{ "now"|date("l, F j, Y") }}
                    </div>

                </div>
            </div>

            <!-- Flash Messages -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <!-- Appointment Info Card -->
            <div class="appointment-info-card">
                <div class="appointment-header">
                    <div class="patient-avatar-large">
                        {{ appointment.patient.client.firstName|first|upper }}{{ appointment.patient.client.lastName|first|upper }}
                    </div>
                    <div class="patient-info">
                        <h4>{{ appointment.patient.client.firstName }} {{ appointment.patient.client.lastName }}</h4>
                        <p>Prescription for appointment on {{ appointment.startDateTime|date('F j, Y') }}</p>
                    </div>
                </div>

                <div class="appointment-details">
                    <div class="detail-item">
                        <span class="detail-label">Appointment Date</span>
                        <span class="detail-value">{{ appointment.startDateTime|date('F j, Y') }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Time</span>
                        <span class="detail-value">{{ appointment.startDateTime|date('h:i A') }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Patient Phone</span>
                        <span class="detail-value">{{ appointment.patient.phone ?? 'Not provided' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Status</span>
                        <span class="detail-value">{{ appointment.status }}</span>
                    </div>
                </div>
            </div>

            <!-- Upload Form Card -->
            <div class="upload-form-card">
                {{ form_start(form, {'attr': {'class': 'upload-form', 'enctype': 'multipart/form-data'}}) }}

                <!-- File Upload Section -->
                <div class="form-section">
                    <h4 class="form-section-title">
                        <i class="fas fa-file-upload text-prescription"></i>
                        Upload Prescription File
                    </h4>

                    <div class="file-upload-wrapper">
                        <div class="file-upload-label" id="dropArea">
                            <div class="upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="upload-text">
                                <h4>Drag & drop or click to upload</h4>
                                <p>Supports PDF, JPG, PNG files (Max 5MB)</p>
                                <button type="button" class="btn-browse">
                                    <i class="fas fa-folder-open me-2"></i> Browse Files
                                </button>
                            </div>
                        </div>

                        {{ form_widget(form.file, {'attr': {'class': 'file-upload-input'}}) }}
                        {{ form_errors(form.file) }}

                        <div class="file-preview" id="filePreview">
                            <div class="file-info">
                                <div class="file-icon other" id="fileIcon">
                                    <i class="fas fa-file-alt"></i>
                                </div>
                                <div class="file-details">
                                    <h5 id="fileName">No file selected</h5>
                                    <p id="fileSize">0 KB</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-text">
                        <i class="fas fa-info-circle"></i>
                        File will be securely stored and accessible to the patient
                    </div>
                </div>

                <!-- Medical Notes Section -->
                <div class="form-section">
                    <h4 class="form-section-title">
                        <i class="fas fa-sticky-note text-prescription"></i>
                        Medical Notes
                    </h4>

                    {{ form_widget(form.notes, {'attr': {
                        'class': 'form-control',
                        'rows': 5,
                        'placeholder': 'Enter prescription details, dosage instructions, follow-up notes...'
                    }}) }}
                    {{ form_errors(form.notes) }}

                    <div class="form-text">
                        <i class="fas fa-lightbulb"></i>
                        These notes will help the patient understand their prescription better
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <a href="{{ path('doctor_dashboard') }}" class="btn btn-outline-secondary">
