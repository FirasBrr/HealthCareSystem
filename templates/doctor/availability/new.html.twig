{% extends 'base.html.twig' %}

{% block title %}MedicalApp - New Availability{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .availability-section {
            background: #f5f7fb;
            min-height: 100vh;
            padding: 30px 0;
        }

        .form-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            margin-bottom: 25px;
        }

        .btn-primary {
            background: #2c7be5;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: #1a68d1;
            transform: translateY(-2px);
        }

        .btn-light {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .form-label {
            font-weight: 600;
            color: #12263f;
            margin-bottom: 8px;
        }

        .form-control {
            border: 1px solid #e6e6e6;
            border-radius: 8px;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #2c7be5;
            box-shadow: 0 0 0 0.2rem rgba(44, 123, 229, 0.25);
        }

        .form-check-input:checked {
            background-color: #2c7be5;
            border-color: #2c7be5;
        }

        .info-card {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 25px;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="availability-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="info-card">
                        <h6><i class="fas fa-info-circle text-primary me-2"></i>Quick Tips</h6>
                        <p class="mb-0 small text-muted">
                            • Use the calendar to quickly mark available time by clicking and dragging<br>
                            • Use this form for recurring schedules or to block time (uncheck "Available")<br>
                            • For one-time availability, leave "Recurring" unchecked and select a date
                        </p>
                    </div>

                    <div class="form-card">
                        <div class="d-flex align-items-center mb-4">
                            <a href="{{ path('doctor_availability') }}" class="btn btn-light me-3">
                                <i class="fas fa-arrow-left"></i>
                            </a>
                            <h1 class="h3 mb-0">Add Availability</h1>
                        </div>

                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.dayOfWeek, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dayOfWeek, {'attr': {'class': 'form-control'}}) }}
                                    <small class="form-text text-muted">For recurring weekly availability</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                                    <small class="form-text text-muted">For one-time availability</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.startTime, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.startTime, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.endTime, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        {{ form_widget(form.recurring, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(form.recurring, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                    </div>
                                    <small class="form-text text-muted">Repeat weekly on selected day</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        {{ form_widget(form.isAvailable, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(form.isAvailable, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                    </div>
                                    <small class="form-text text-muted">Toggle off to block this time</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Availability
                            </button>
                            <a href="{{ path('doctor_availability') }}" class="btn btn-light">Cancel</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}