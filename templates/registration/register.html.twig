{% extends 'base.html.twig' %}

{% block title %}MedicalApp - Create Your Account{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #2c7be5;
            --primary-dark: #1a68d1;
            --secondary: #6e84a3;
            --success: #00d97e;
            --light: #f9fbfd;
            --dark: #12263f;
            --gradient: linear-gradient(135deg, #2c7be5 0%, #6e84a3 100%);
        }

        .register-section {
            background: var(--gradient);
            color: white;
            padding: 80px 0;
            position: relative;
            overflow: hidden;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .register-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000" opacity="0.1"><path fill="white" d="M500,250c138,0,250,112,250,250S638,750,500,750S250,638,250,500S362,250,500,250z"/></svg>') repeat;
        }

        .register-card {
            background: white;
            border-radius: 20px;
            padding: 50px 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
            position: relative;
            z-index: 2;
        }

        .register-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
            text-align: center;
        }

        .register-subtitle {
            color: var(--secondary);
            text-align: center;
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .form-group-custom {
            margin-bottom: 1.5rem;
        }

        .form-label-custom {
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .form-control-custom {
            border: 2px solid #e3ebf6;
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f9fbfd;
        }

        .form-control-custom:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(44, 123, 229, 0.1);
            background: white;
        }

        .btn-register {
            background: var(--primary);
            color: white !important;
            border: none;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 12px;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .btn-register:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(44, 123, 229, 0.3);
            color: white !important;
        }

        .login-link {
            text-align: center;
            margin-top: 2rem;
            color: var(--secondary);
        }

        .login-link a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .feature-icon-small {
            width: 50px;
            height: 50px;
            background: var(--gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .benefits-list {
            list-style: none;
            padding: 0;
        }

        .benefits-list li {
            padding: 0.5rem 0;
            color: var(--secondary);
        }

        .benefits-list li i {
            color: var(--success);
            margin-right: 0.5rem;
        }

        .role-description {
            background: var(--light);
            border-radius: 12px;
            padding: 15px;
            margin-top: 10px;
            border-left: 4px solid var(--primary);
        }

        .role-description h6 {
            color: var(--dark);
            margin-bottom: 5px;
        }

        .role-description p {
            color: var(--secondary);
            margin-bottom: 0;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .register-section {
                padding: 40px 0;
            }

            .register-card {
                padding: 30px 20px;
            }

            .register-title {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Register Section -->
    <section class="register-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="register-card">
                        <div class="row align-items-center">
                            <!-- Registration Form -->
                            <div class="col-lg-6">
                                <h1 class="register-title">Create Your Account</h1>
                                <p class="register-subtitle">Join thousands managing their health with MedicalApp</p>

                                {{ form_start(registrationForm) }}
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group-custom">
                                            {{ form_label(registrationForm.firstName, 'First Name', {'label_attr': {'class': 'form-label-custom'}}) }}
                                            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control form-control-custom'}}) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-custom">
                                            {{ form_label(registrationForm.lastName, 'Last Name', {'label_attr': {'class': 'form-label-custom'}}) }}
                                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control form-control-custom'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group-custom">
                                    {{ form_label(registrationForm.email, 'Email Address', {'label_attr': {'class': 'form-label-custom'}}) }}
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-custom'}}) }}
                                </div>

                                <div class="form-group-custom">
                                    {{ form_label(registrationForm.role, 'Account Type', {'label_attr': {'class': 'form-label-custom'}}) }}
                                    {{ form_widget(registrationForm.role, {'attr': {'class': 'form-control form-control-custom'}}) }}

                                    <!-- Role Descriptions -->
                                    <div class="role-description">
                                        <h6><i class="fas fa-user-injured me-2"></i>Patient</h6>
                                        <p>Book appointments, manage your health records, and communicate with doctors.</p>
                                    </div>
                                    <div class="role-description mt-2">
                                        <h6><i class="fas fa-user-md me-2"></i>Doctor</h6>
                                        <p>Manage your schedule, see patients, and provide medical care through our platform.</p>
                                    </div>
                                </div>

                                <div class="form-group-custom">
                                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label-custom'}}) }}
                                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-custom'}}) }}
                                </div>

                                <button type="submit" class="btn btn-register">
                                    <i class="fas fa-user-plus me-2"></i>Create Account
                                </button>
                                {{ form_end(registrationForm) }}

                                <div class="login-link">
                                    Already have an account? <a href="{{ path('app_login') }}">Sign in here</a>
                                </div>
                            </div>

                            <!-- Benefits Sidebar -->
                            <div class="col-lg-5 offset-lg-1 mt-5 mt-lg-0">
                                <div class="feature-icon-small">
                                    <i class="fas fa-heartbeat"></i>
                                </div>
                                <h4 style="color: var(--dark); margin-bottom: 1.5rem;">Why Join MedicalApp?</h4>

                                <ul class="benefits-list">
                                    <li><i class="fas fa-check-circle"></i> Book appointments 24/7</li>
                                    <li><i class="fas fa-check-circle"></i> Access to verified healthcare professionals</li>
                                    <li><i class="fas fa-check-circle"></i> Smart appointment reminders</li>
                                    <li><i class="fas fa-check-circle"></i> Secure health records</li>
                                    <li><i class="fas fa-check-circle"></i> Easy prescription management</li>
                                    <li><i class="fas fa-check-circle"></i> Priority customer support</li>
                                </ul>

                                <div class="mt-4 p-3" style="background: var(--light); border-radius: 12px;">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-shield-alt text-success me-3" style="font-size: 1.5rem;"></i>
                                        <div>
                                            <h6 class="mb-1" style="color: var(--dark);">Secure & Private</h6>
                                            <p class="mb-0 small" style="color: var(--secondary);">Your health data is encrypted and protected</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add real-time password strength check
            const passwordInput = document.querySelector('#registration_form_plainPassword');
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    const strengthIndicator = document.createElement('div');
                    strengthIndicator.className = 'password-strength mt-2';

                    let strength = 0;
                    if (password.length >= 8) strength++;
                    if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
                    if (password.match(/\d/)) strength++;
                    if (password.match(/[^a-zA-Z\d]/)) strength++;

                    const strengthText = ['Very Weak', 'Weak', 'Fair', 'Strong', 'Very Strong'][strength];
                    const strengthColors = ['#dc3545', '#ffc107', '#fd7e14', '#20c997', '#198754'];

                    strengthIndicator.innerHTML = `
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar" style="width: ${strength * 25}%; background-color: ${strengthColors[strength]};"></div>
                        </div>
                        <small style="color: ${strengthColors[strength]};">${strengthText}</small>
                    `;

                    const existingIndicator = this.parentNode.querySelector('.password-strength');
                    if (existingIndicator) {
                        existingIndicator.remove();
                    }
                    this.parentNode.appendChild(strengthIndicator);
                });
            }

            // Show role descriptions based on selection
            const roleSelect = document.querySelector('#registration_form_role');
            if (roleSelect) {
                roleSelect.addEventListener('change', function() {
                    const roleDescriptions = document.querySelectorAll('.role-description');
                    roleDescriptions.forEach(desc => {
                        desc.style.opacity = '0.6';
                    });

                    if (this.value === 'ROLE_PATIENT') {
                        roleDescriptions[0].style.opacity = '1';
                    } else if (this.value === 'ROLE_DOCTOR') {
                        roleDescriptions[1].style.opacity = '1';
                    }
                });
            }
        });
    </script>
{% endblock %}