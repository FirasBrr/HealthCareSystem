{% extends 'base.html.twig' %}

{% block title %}MedicalApp - My Appointments{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #2c7be5;
            --primary-light: #e3ebf8;
            --primary-dark: #1a68d1;
            --secondary: #6e84a3;
            --success: #00d97e;
            --success-light: #e6f9f0;
            --warning: #f6c343;
            --warning-light: #fef8e6;
            --danger: #e63757;
            --danger-light: #fce9ec;
            --info: #39afd1;
            --info-light: #eaf5f9;
            --light: #f9fbfd;
            --dark: #12263f;
            --gray-100: #f8f9fa;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
            --gray-400: #ced4da;
            --gray-500: #adb5bd;
            --gray-600: #6c757d;
            --gray-700: #495057;
            --gray-800: #343a40;
            --gray-900: #212529;
            --sidebar-bg: #ffffff;
            --card-bg: #ffffff;
            --body-bg: #f5f7fb;
            --gradient-primary: linear-gradient(135deg, #2c7be5 0%, #1a68d1 100%);
            --gradient-success: linear-gradient(135deg, #00d97e 0%, #00b86c 100%);
            --gradient-warning: linear-gradient(135deg, #f6c343 0%, #f4b223 100%);
            --gradient-danger: linear-gradient(135deg, #e63757 0%, #d92545 100%);
            --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
            --border-radius: 0.75rem;
            --border-radius-sm: 0.5rem;
            --transition: all 0.3s ease;
        }

        body {
            background-color: var(--body-bg);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        /* Main Dashboard Layout */
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Navigation */
        .sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            border-right: 1px solid var(--gray-200);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .patient-avatar-large {
            width: 50px;
            height: 50px;
            background: var(--gradient-primary);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .patient-info h6 {
            margin-bottom: 0.25rem;
            font-weight: 600;
        }

        .patient-info small {
            color: var(--gray-600);
            font-size: 0.85rem;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem;
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: 2rem;
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--gray-600);
            letter-spacing: 0.5px;
            margin-bottom: 1rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--gray-700);
            text-decoration: none;
            margin-bottom: 0.5rem;
            transition: var(--transition);
            font-weight: 500;
        }

        .nav-item:hover {
            background: var(--primary-light);
            color: var(--primary);
            transform: translateX(5px);
        }

        .nav-item.active {
            background: var(--gradient-primary);
            color: white;
            box-shadow: 0 4px 12px rgba(44, 123, 229, 0.3);
        }

        .nav-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            background: var(--gray-100);
            color: var(--gray-600);
            transition: var(--transition);
        }

        .nav-item:hover .nav-icon {
            background: white;
        }

        .nav-item.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid var(--gray-200);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--danger);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

        .logout-btn:hover {
            background: var(--danger-light);
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 2rem;
            max-width: calc(100% - 280px);
        }

        /* Top Header */
        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .header-left h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .header-left p {
            color: var(--gray-600);
            margin: 0;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .date-badge {
            background: var(--primary-light);
            color: var(--primary);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .notification-btn {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--gray-100);
            border: none;
            color: var(--gray-600);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            transition: var(--transition);
        }

        .notification-btn:hover {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--danger);
            color: white;
            font-size: 0.7rem;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Page Header */
        .page-header {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin: 0;
        }

        .page-subtitle {
            color: var(--gray-600);
            margin: 0.5rem 0 0 0;
        }

        /* Filter Section */
        .filter-section {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .filter-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .filter-header h4 {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }

        .filter-reset {
            padding: 0.5rem 1rem;
            background: var(--gray-100);
            color: var(--gray-700);
            border: none;
            border-radius: var(--border-radius-sm);
            font-size: 0.85rem;
            font-weight: 500;
            transition: var(--transition);
            cursor: pointer;
            text-decoration: none;
        }

        .filter-reset:hover {
            background: var(--gray-200);
            text-decoration: none;
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .filter-group {
            margin-bottom: 0;
        }

        .filter-label {
            display: block;
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
        }

        .filter-select {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius-sm);
            background: white;
            color: var(--gray-700);
            font-size: 0.9rem;
            transition: var(--transition);
        }

        .filter-select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(44, 123, 229, 0.1);
        }

        /* Stats Summary */
        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .stat-summary-item {
            background: var(--card-bg);
            border-radius: var(--border-radius-sm);
            padding: 1rem;
            text-align: center;
            border: 1px solid var(--gray-200);
            transition: var(--transition);
        }

        .stat-summary-item:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

        .stat-summary-item.active {
            border-color: var(--primary);
            background: var(--primary-light);
        }

        .stat-summary-count {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
            display: block;
            margin-bottom: 0.25rem;
        }

        .stat-summary-label {
            font-size: 0.85rem;
            color: var(--gray-600);
        }

        /* Appointments List */
        .appointments-section {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .appointment-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .appointment-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            background: var(--gray-100);
            border-radius: var(--border-radius-sm);
            transition: var(--transition);
            border-left: 4px solid transparent;
        }

        .appointment-item:hover {
            background: var(--gray-200);
            transform: translateX(5px);
        }

        .appointment-item.pending { border-left-color: var(--warning); }
        .appointment-item.confirmed { border-left-color: var(--success); }
        .appointment-item.cancelled { border-left-color: var(--danger); }
        .appointment-item.completed { border-left-color: var(--secondary); }

        .appointment-time {
            min-width: 120px;
            text-align: center;
            padding: 0.75rem;
            background: white;
            border-radius: 8px;
            margin-right: 1rem;
        }

        .appointment-time .time {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark);
            display: block;
        }

        .appointment-time .date {
            font-size: 0.85rem;
            color: var(--gray-600);
        }

        .doctor-info {
            flex: 1;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .doctor-avatar-small {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--gradient-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 1rem;
        }

        .doctor-details h6 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: var(--dark);
        }

        .doctor-details p {
            color: var(--gray-600);
            font-size: 0.85rem;
            margin: 0;
        }

        .appointment-status {
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-pending {
            background: var(--warning-light);
            color: var(--warning);
        }

        .status-confirmed {
            background: var(--success-light);
            color: var(--success);
        }

        .status-cancelled {
            background: var(--danger-light);
            color: var(--danger);
        }

        .status-completed {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .appointment-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            border: none;
            font-size: 0.85rem;
            font-weight: 500;
            transition: var(--transition);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-cancel {
            background: var(--danger-light);
            color: var(--danger);
        }

        .btn-cancel:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(230, 55, 87, 0.3);
        }

        .btn-disabled {
            background: var(--gray-300);
            color: var(--gray-600);
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            border: none;
            font-size: 0.85rem;
            font-weight: 500;
            cursor: not-allowed;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            opacity: 0.7;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--gray-600);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--gray-400);
        }

        /* Toast notifications */
        .toast-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 1rem 1.5rem;
            border-radius: var(--border-radius-sm);
            background: white;
            box-shadow: var(--shadow-lg);
            z-index: 9999;
            display: flex;
            align-items: center;
            animation: slideIn 0.3s ease;
            border-left: 4px solid;
        }

        .toast-success {
            border-left-color: var(--success);
            color: var(--success);
        }

        .toast-warning {
            border-left-color: var(--warning);
            color: var(--warning);
        }

        .toast-danger {
            border-left-color: var(--danger);
            color: var(--danger);
        }

        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* Flash Messages */
        .alert {
            border-radius: var(--border-radius-sm);
            border: none;
            box-shadow: var(--shadow-sm);
            margin-bottom: 1.5rem;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .sidebar {
                width: 250px;
            }
            .main-content {
                margin-left: 250px;
                max-width: calc(100% - 250px);
            }
        }

        @media (max-width: 992px) {
            .dashboard-wrapper {
                flex-direction: column;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: static;
                margin-bottom: 1rem;
            }
            .main-content {
                margin-left: 0;
                max-width: 100%;
                padding: 1rem;
            }
            .filter-grid {
                grid-template-columns: 1fr;
            }
            .appointment-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            .appointment-time {
                width: 100%;
                text-align: left;
            }
            .appointment-actions {
                width: 100%;
                justify-content: flex-end;
            }
        }

        @media (max-width: 768px) {
            .top-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            .header-right {
                width: 100%;
                justify-content: space-between;
            }
            .stats-summary {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 576px) {
            .stats-summary {
                grid-template-columns: 1fr;
            }
        }
    </style>
    <!-- Add Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="dashboard-wrapper">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="patient-avatar-large">
                    {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
                </div>
                <div class="patient-info">
                    <h6>{{ app.user.firstName }} {{ app.user.lastName }}</h6>
                    <small>Patient</small>
                </div>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="{{ path('app_dashboard') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        Dashboard
                    </a>
                    <a href="{{ path('patient_appointments') }}" class="nav-item active">
                        <div class="nav-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        Appointments
                    </a>
                    <a href="{{ path('patient_prescriptions') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-file-prescription"></i>
                        </div>
                        Prescriptions
                    </a>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Health</div>
                    <a href="{{ path('patient_doctors') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-search"></i>
                        </div>
                        Find Doctors
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('app_logout') }}" class="logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Header -->
            <div class="top-header">
                <div class="header-left">
                    <h1>Welcome, {{ app.user.firstName }}</h1>
                    <p>Manage all your medical appointments</p>
                </div>
                <div class="header-right">
                    <div class="date-badge">
                        <i class="fas fa-calendar-day me-2"></i>{{ "now"|date("l, F j, Y") }}
                    </div>

                </div>
            </div>

            <!-- Flash Messages -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}



            <!-- Filter Section -->
            <div class="filter-section">
                <div class="filter-header">
                    <h4><i class="fas fa-filter me-2 text-primary"></i>Filter Appointments</h4>
                    <button class="filter-reset" onclick="resetFilters()">
                        <i class="fas fa-redo me-1"></i>Reset Filters
                    </button>
                </div>

                <div class="filter-grid">
                    <div class="filter-group">
                        <label class="filter-label">Status</label>
                        <select id="statusFilter" class="filter-select" onchange="filterAppointments()">
                            <option value="all">All Status</option>
                            <option value="pending">Pending</option>
                            <option value="confirmed">Confirmed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Time Period</label>
                        <select id="timeFilter" class="filter-select" onchange="filterAppointments()">
                            <option value="all">All Time</option>
                            <option value="upcoming">Upcoming</option>
                            <option value="past">Past</option>
                            <option value="today">Today</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Sort By</label>
                        <select id="sortFilter" class="filter-select" onchange="filterAppointments()">
                            <option value="date_desc">Date (Newest First)</option>
                            <option value="date_asc">Date (Oldest First)</option>
                            <option value="status">Status</option>
                            <option value="doctor">Doctor Name</option>
                        </select>
                    </div>
                </div>
            </div>



            <!-- Appointments List -->
            <div class="appointments-section">
                <div id="appointmentsContainer">
                    {% if appointments|length > 0 %}
                        <div class="appointment-list">
                            {% for appointment in appointments %}
                                <div class="appointment-item {{ appointment.status|lower }}"
                                     data-status="{{ appointment.status|lower }}"
                                     data-date="{{ appointment.startDateTime|date('Y-m-d') }}"
                                     data-time="{{ appointment.startDateTime|date('H:i:s') }}"
                                     data-doctor="{{ appointment.doctor.client.lastName|lower }}">
                                    <div class="appointment-time">
                                        <span class="time">{{ appointment.startDateTime|date('h:i A') }}</span>
                                        <span class="date">{{ appointment.startDateTime|date('M j, Y') }}</span>
                                    </div>
                                    <div class="doctor-info">
                                        <div class="doctor-avatar-small">
                                            {{ appointment.doctor.client.firstName|first|upper }}{{ appointment.doctor.client.lastName|first|upper }}
                                        </div>
                                        <div class="doctor-details">
                                            <h6>Dr. {{ appointment.doctor.client.firstName }} {{ appointment.doctor.client.lastName }}</h6>
                                            <p>
                                                <i class="fas fa-stethoscope me-1"></i>{{ appointment.doctor.specialty ?? 'General Medicine' }}
                                                <br>
                                                <i class="fas fa-phone me-1"></i>{{ appointment.doctor.phone ?? 'No phone' }}
                                            </p>
                                        </div>
                                    </div>
                                    <span class="appointment-status status-{{ appointment.status|lower }}">
                                        {{ appointment.status }}
                                    </span>
                                    <div class="appointment-actions">
                                        {% if appointment.status == 'Pending' or appointment.status == 'Confirmed' %}
                                            {% set now = "now"|date_modify("0 minute") %}
                                            {% set appointmentStart = appointment.startDateTime|date_modify("0 minute") %}

                                            {% if appointmentStart > now %}
                                                <button class="btn-action btn-cancel" onclick="cancelAppointment({{ appointment.id }})" title="Cancel Appointment">
                                                    <i class="fas fa-times"></i> Cancel
                                                </button>
                                            {% else %}
                                                <span class="btn-disabled" title="Cannot cancel past appointments">
                                                    <i class="fas fa-clock me-1"></i> Past
                                                </span>
                                            {% endif %}
                                        {% elseif appointment.status == 'Completed' %}
                                            <span class="btn-disabled" title="Appointment completed">
                                                <i class="fas fa-check me-1"></i> Completed
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-calendar-plus"></i>
                            <h5>No appointments found</h5>
                            <p>You haven't booked any appointments yet.</p>
                            <a href="{{ path('patient_doctors') }}" class="btn-primary-action mt-3">
                                <i class="fas fa-search me-1"></i>Find Doctors
                            </a>
                        </div>
                    {% endif %}
                </div>

                <!-- Loading Indicator -->
                <div id="loadingIndicator" class="empty-state" style="display: none;">
                    <i class="fas fa-spinner fa-spin"></i>
                    <h5>Loading appointments...</h5>
                </div>
            </div>
        </main>
    </div>
