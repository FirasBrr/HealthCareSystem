{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var loadingOverlay = document.getElementById('loadingOverlay');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'timeGridWeek,dayGridMonth,listWeek'
                },
                slotMinTime: '07:00:00',
                slotMaxTime: '21:00:00',
                allDaySlot: false,
                nowIndicator: true,
                editable: true,
                selectable: true,
                selectMirror: true,
                weekends: true,

                eventClick: function(info) {
                    window.location.href = '{{ path('doctor_availability_edit', {'id': 'PLACEHOLDER'}) }}'.replace('PLACEHOLDER', info.event.id);
                },

                select: function(info) {
                    loadingOverlay.style.display = 'flex';

                    fetch('{{ path('doctor_availability_quick_add') }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: JSON.stringify({
                            start: info.start.toISOString(),
                            end: info.end.toISOString(),
                            isAvailable: true
                        })
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(data => {
                            loadingOverlay.style.display = 'none';

                            if (data.success) {
                                calendar.addEvent({
                                    id: data.id,
                                    title: data.title,
                                    start: info.start,
                                    end: info.end,
                                    classNames: [data.className],
                                    extendedProps: data.extendedProps
                                });

                                showToast('Available time slot created successfully!', 'success');
                            } else {
                                showToast('Error creating availability slot', 'danger');
                            }
                        })
                        .catch(error => {
                            loadingOverlay.style.display = 'none';
                            console.error('Error:', error);
                            showToast('Error creating availability slot. Please try again.', 'danger');
                        })
                        .finally(() => {
                            calendar.unselect();
                        });
                },

                events: {{ events|raw }},

                eventDidMount: function(info) {
                    if (info.event.extendedProps.type === 'blocked') {
                        info.el.classList.add('blocked-slot');
                    } else {
                        info.el.classList.add('availability-slot');
                    }
                }
            });

            calendar.render();

            // Toast notification function
            function showToast(message, type = 'success') {
                // Remove existing toasts
                document.querySelectorAll('.toast-notification').forEach(toast => toast.remove());

                // Create toast element
                const toast = document.createElement('div');
                toast.className = `toast-notification toast-${type}`;
                toast.innerHTML = `
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                    ${message}
                `;

                // Add to page
                document.body.appendChild(toast);

                // Remove after 3 seconds
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.remove();
                    }
                }, 3000);
