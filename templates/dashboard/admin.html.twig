{% extends 'base.html.twig' %}
{% block title %}MedicalApp - Admin Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #2c7be5;
            --primary-light: #e3ebf8;
            --primary-dark: #1a68d1;
            --secondary: #6e84a3;
            --success: #00d97e;
            --success-light: #e6f9f0;
            --warning: #f6c343;
            --warning-light: #fef8e6;
            --danger: #e63757;
            --danger-light: #fce9ec;
            --info: #39afd1;
            --info-light: #eaf5f9;
            --light: #f9fbfd;
            --dark: #12263f;
            --gray-100: #f8f9fa;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
            --gray-400: #ced4da;
            --gray-500: #adb5bd;
            --gray-600: #6c757d;
            --gray-700: #495057;
            --gray-800: #343a40;
            --gray-900: #212529;
            /* Changed from purple to blue: */
            --admin-primary: #4361ee;      /* Admin blue */
            --admin-primary-light: #edf2ff;
            --admin-primary-dark: #3a56d4;
            --card-bg: #ffffff;
            --body-bg: #f5f7fb;
            --sidebar-bg: #ffffff;
            --gradient-primary: linear-gradient(135deg, #2c7be5 0%, #1a68d1 100%);
            --gradient-success: linear-gradient(135deg, #00d97e 0%, #00b86c 100%);
            --gradient-warning: linear-gradient(135deg, #f6c343 0%, #f4b223 100%);
            --gradient-danger: linear-gradient(135deg, #e63757 0%, #d92545 100%);
            --gradient-admin: linear-gradient(135deg, #4361ee 0%, #3a56d4 100%); /* Updated */
            --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
            --border-radius: 0.75rem;
            --border-radius-sm: 0.5rem;
            --transition: all 0.3s ease;
        }

        body {
            background-color: var(--body-bg);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        /* Main Dashboard Layout */
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Navigation */
        .sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            border-right: 1px solid var(--gray-200);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            gap: 1rem;
            background: var(--gradient-admin);
            color: white;
        }

        .admin-avatar {
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

        .admin-info h6 {
            margin-bottom: 0.25rem;
            font-weight: 600;
            color: white;
        }

        .admin-info small {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.85rem;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem;
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: 2rem;
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--gray-600);
            letter-spacing: 0.5px;
            margin-bottom: 1rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--gray-700);
            text-decoration: none;
            margin-bottom: 0.5rem;
            transition: var(--transition);
            font-weight: 500;
        }

        .nav-item:hover {
            background: var(--admin-primary-light);
            color: var(--admin-primary-dark);
            transform: translateX(5px);
        }

        .nav-item.active {
            background: var(--gradient-admin);
            color: white;
            box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
        }

        .nav-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            background: var(--gray-100);
            color: var(--gray-600);
            transition: var(--transition);
        }

        .nav-item:hover .nav-icon {
            background: white;
        }

        .nav-item.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid var(--gray-200);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--danger);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

        .logout-btn:hover {
            background: var(--danger-light);
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 2rem;
            max-width: calc(100% - 280px);
        }

        /* Top Header */
        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .header-left h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .header-left p {
            color: var(--gray-600);
            margin: 0;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .date-badge {
            background: var(--admin-primary-light);
            color: var(--admin-primary);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .notification-btn {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--gray-100);
            border: none;
            color: var(--gray-600);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            transition: var(--transition);
        }

        .notification-btn:hover {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--danger);
            color: white;
            font-size: 0.7rem;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Stats Cards - Modern Design */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
        }

        .stat-card.users::before { background: var(--primary); }
        .stat-card.doctors::before { background: var(--success); }
        .stat-card.patients::before { background: var(--warning); }
        .stat-card.appointments::before { background: var(--danger); }

        .stat-content {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .stat-card.users .stat-icon {
            background: var(--primary-light);
            color: var(--primary);
        }

        .stat-card.doctors .stat-icon {
            background: var(--success-light);
            color: var(--success);
        }

        .stat-card.patients .stat-icon {
            background: var(--warning-light);
            color: var(--warning);
        }

        .stat-card.appointments .stat-icon {
            background: var(--danger-light);
            color: var(--danger);
        }

        .stat-numbers h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
            color: var(--dark);
        }

        .stat-numbers p {
            color: var(--gray-600);
            font-size: 0.9rem;
            margin: 0;
        }

        .stat-trend {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .stat-trend.positive { color: var(--success); }
        .stat-trend.negative { color: var(--danger); }

        /* Dashboard Sections */
        .dashboard-section {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-header h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }

        .section-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-view-all {
            padding: 0.5rem 1rem;
            background: var(--gray-100);
            color: var(--gray-700);
            border: none;
            border-radius: var(--border-radius-sm);
            font-size: 0.85rem;
            font-weight: 500;
            transition: var(--transition);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

        .btn-view-all:hover {
            background: var(--gray-200);
            text-decoration: none;
            color: var(--gray-700);
        }

        /* Quick Actions */
        .quick-actions-grid {
            display: grid;
            gap: 1rem;
        }

        .action-card {
            display: flex;
            align-items: center;
            padding: 1.25rem;
            background: var(--gray-100);
            border-radius: var(--border-radius-sm);
            border: 1px solid var(--gray-200);
            transition: var(--transition);
            text-decoration: none;
            color: var(--dark);
        }

        .action-card:hover {
            background: var(--admin-primary-light);
            border-color: var(--admin-primary);
            transform: translateX(5px);
            text-decoration: none;
            color: var(--dark);
        }

        .action-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            background: var(--gradient-admin);
            color: white;
            font-size: 1.25rem;
        }

        .action-content h6 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: var(--dark);
        }

        .action-content small {
            color: var(--gray-600);
            font-size: 0.85rem;
        }

        /* Chart Container */
        .chart-container {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .chart-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }

        .chart-subtitle {
            font-size: 0.9rem;
            color: var(--gray-600);
            margin: 0.25rem 0 0 0;
        }

        .simple-histogram-container {
            height: 250px;
            width: 100%;
        }

        /* Status Legend */
        .status-legend {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-top: 1.5rem;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .legend-color {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .legend-text {
            font-size: 0.85rem;
            color: var(--gray-600);
        }

        /* Empty States */
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--gray-600);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--gray-400);
        }

        /* Alert Messages */
        .alert {
            border-radius: var(--border-radius-sm);
            border: none;
            box-shadow: var(--shadow-sm);
            margin-bottom: 1.5rem;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .sidebar {
                width: 250px;
            }
            .main-content {
                margin-left: 250px;
                max-width: calc(100% - 250px);
            }
        }

        @media (max-width: 992px) {
            .dashboard-wrapper {
                flex-direction: column;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: static;
                margin-bottom: 1rem;
            }
            .main-content {
                margin-left: 0;
                max-width: 100%;
                padding: 1rem;
            }
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .quick-actions-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
            .top-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            .header-right {
                width: 100%;
                justify-content: space-between;
            }
            .status-legend {
                flex-direction: column;
                gap: 1rem;
                align-items: center;
            }
        }
    </style>
    <!-- Add Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

