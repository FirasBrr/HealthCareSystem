{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modal = new bootstrap.Modal(document.getElementById('doctorModal'));
            const modalBody = document.getElementById('modal-body-content');
            const modalTitle = document.getElementById('doctorModalLabel');
            const doctorsContainer = document.getElementById('doctors-container');

            // Show toast notification
            function showToast(message, type = 'success') {
                const toast = document.createElement('div');
                toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show alert-toast`;
                toast.innerHTML = `
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(toast);

                // Auto remove after 5 seconds
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.remove();
                    }
                }, 5000);
            }

            // Load form in modal
            async function loadForm(url, title) {
                try {
                    modalTitle.textContent = title;
                    modalBody.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary" role="status"></div><p class="mt-2 text-muted">Loading...</p></div>';

                    const response = await fetch(url, {
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }

                    const data = await response.json();

                    if (data.html) {
                        modalBody.innerHTML = data.html;
                        modal.show();

                        // Initialize form submission handler
                        const form = modalBody.querySelector('form');
                        if (form) {
                            form.addEventListener('submit', handleFormSubmit);
                        }
                    } else {
                        throw new Error('No HTML content received');
                    }
                } catch (error) {
                    console.error('Error loading form:', error);
                    modalBody.innerHTML = `
                        <div class="alert alert-danger">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Error Loading Form</h6>
                            <p class="mb-0">There was an error loading the form. Please try again.</p>
                        </div>
                    `;
                    modal.show();
                }
            }

            // Handle form submission
            async function handleFormSubmit(e) {
                e.preventDefault();
                const form = e.target;
                const submitBtn = form.querySelector('.btn-submit');
                const formData = new FormData(form);

                // Show loading state
                submitBtn.classList.add('btn-loading');
                submitBtn.disabled = true;
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<div class="spinner-border spinner-border-sm me-2"></div> Processing...';

                try {
                    const response = await fetch(form.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        showToast(data.message);
                        modal.hide();

                        // Reload the page to show updated data
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        // Update form with validation errors
                        modalBody.innerHTML = data.html;

                        // Re-initialize form submission handler
                        const newForm = modalBody.querySelector('form');
                        if (newForm) {
                            newForm.addEventListener('submit', handleFormSubmit);
                        }

                        showToast('Please check the form for errors', 'error');
                    }
                } catch (error) {
                    console.error('Error submitting form:', error);
                    showToast('Error submitting form. Please try again.', 'error');
                } finally {
                    submitBtn.classList.remove('btn-loading');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
            }

            // Add new doctor
            document.querySelectorAll('[data-action="new"]').forEach(btn => {
                btn.addEventListener('click', () => {
                    loadForm('{{ path('admin_doctors_new') }}?ajax=1', 'Add New Doctor');
                });
            });

            // Edit doctor
            document.querySelectorAll('.edit-doctor').forEach(btn => {
                btn.addEventListener('click', () => {
                    const doctorId = btn.getAttribute('data-id');
                    loadForm(`/admin/doctors/${doctorId}/edit?ajax=1`, 'Edit Doctor');
                });
            });

            // Delete doctor
            document.querySelectorAll('.delete-doctor').forEach(btn => {
                btn.addEventListener('click', function() {
                    const doctorId = this.getAttribute('data-id');
                    const doctorName = this.getAttribute('data-name');
                    const form = this.closest('.delete-form');

                    if (confirm(`Are you sure you want to delete Dr. ${doctorName}? This action cannot be undone.`)) {
                        deleteDoctor(doctorId, form);
                    }
                });
            });

            // Delete doctor function
            async function deleteDoctor(doctorId, form) {
                const formData = new FormData(form);

                try {
                    const response = await fetch(form.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        showToast(data.message);
                        // Remove doctor card from DOM
                        const doctorCard = document.getElementById(`doctor-${doctorId}`);
                        if (doctorCard) {
                            doctorCard.remove();
                        }

                        // Update doctor count
                        const statsCounter = document.querySelector('.stats-counter');
                        if (statsCounter) {
                            const currentText = statsCounter.textContent.trim();
                            const currentCount = parseInt(currentText) || 0;
                            statsCounter.innerHTML = `<i class="fas fa-user-md me-2"></i>${currentCount - 1} Doctors`;
                        }

                        // Update total stats card
                        const totalStat = document.querySelector('.stat-card.total h3');
                        if (totalStat) {
                            const currentTotal = parseInt(totalStat.textContent) || 0;
                            totalStat.textContent = currentTotal - 1;
                        }
                    } else {
                        showToast(data.message, 'error');
                    }
                } catch (error) {
                    console.error('Error deleting doctor:', error);
                    showToast('Error deleting doctor. Please try again.', 'error');
                }
            }

            // Add animation to doctor cards
            const doctorCards = document.querySelectorAll('.doctor-card');
            doctorCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.05}s`;
            });

            // Add animation to stats cards
            const statCards = document.querySelectorAll('.stat-card');
            statCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
{% endblock %}