{% extends 'base.html.twig' %}

{% block title %}MedicalApp - Dr. {{ doctor.client.firstName }}'s Availability{% endblock %}

{% block body %}
    <section class="doctors-section">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a href="{{ path('patient_doctors') }}" class="btn btn-light mb-3">
                                <i class="fas fa-arrow-left me-2"></i>Back to Doctors
                            </a>
                            <h1 class="display-6 fw-bold">Dr. {{ doctor.client.firstName }} {{ doctor.client.lastName }}</h1>
                            <p class="text-muted">{{ doctor.specialty ?? 'General Medicine' }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Available Time Slots</h5>
                        </div>
                        <div class="card-body">
                            {% if availabilities|length > 0 %}
                                <div class="row">
                                    {% for availability in availabilities %}
                                        <div class="col-md-6 mb-3">
                                            <div class="availability-slot p-3 border rounded">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <h6 class="mb-1">
                                                            {% if availability.isRecurring %}
                                                                Every {{ availability.dayOfWeek }}
                                                            {% else %}
                                                                {{ availability.date ? availability.date|date('M j, Y') : 'Specific date' }}
                                                            {% endif %}
                                                        </h6>
                                                        <small class="text-muted">
                                                            {{ availability.startTime|date('h:i A') }} - {{ availability.endTime|date('h:i A') }}
                                                        </small>
                                                    </div>
                                                    <button class="btn btn-primary btn-sm" onclick="bookAppointment({{ doctor.id }}, {{ availability.id }})">
                                                        <i class="fas fa-bookmark me-1"></i>Book
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="text-center py-4">
                                    <i class="fas fa-calendar-times fa-2x text-muted mb-3"></i>
                                    <h5>No available slots</h5>
                                    <p class="text-muted">This doctor doesn't have any available time slots at the moment.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Doctor Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-4">
                                <div class="doctor-avatar mx-auto mb-3">
                                    {{ doctor.client.firstName|first }}{{ doctor.client.lastName|first }}
                                </div>
                                <h5>Dr. {{ doctor.client.firstName }} {{ doctor.client.lastName }}</h5>
                                <p class="text-muted">{{ doctor.specialty ?? 'General Medicine' }}</p>
                            </div>

                            <div class="mb-3">
                                <strong><i class="fas fa-phone me-2"></i>Phone:</strong>
                                <br>
                                <span class="text-muted">{{ doctor.phone ?? 'Not provided' }}</span>
                            </div>

                            <div class="mb-3">
                                <strong><i class="fas fa-graduation-cap me-2"></i>Bio:</strong>
                                <br>
                                <span class="text-muted">{{ doctor.bio ?? 'No bio available' }}</span>
                            </div>

                            {% if doctor.rating %}
                                <div>
                                    <strong><i class="fas fa-star me-2"></i>Rating:</strong>
                                    <br>
                                    <span class="text-muted">{{ doctor.rating }}/5</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function bookAppointment(doctorId, availabilityId) {
            if (confirm('Book this appointment?')) {
                fetch('{{ path('patient_appointment_book') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        doctorId: doctorId,
                        availabilityId: availabilityId
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Appointment booked successfully!');
                            window.location.href = '{{ path('app_dashboard') }}';
                        } else {
                            alert('Error: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Error booking appointment');
                    });
            }
        }
    </script>

    <style>
        .doctors-section {
            background: #f5f7fb;
            min-height: 100vh;
            padding: 30px 0;
        }

        .doctor-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #2c7be5 0%, #6e84a3 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .availability-slot {
            background: white;
            border-left: 4px solid #00d97e !important;
        }
    </style>
{% endblock %}