{% block javascripts %}
    {{ parent() }}
    <script>
        // Store all appointments data
        let allAppointments = [];

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Store all appointment items
            const appointmentItems = document.querySelectorAll('.appointment-item');
            allAppointments = Array.from(appointmentItems).map(item => ({
                element: item,
                status: item.dataset.status,
                date: item.dataset.date,
                time: item.dataset.time,
                doctor: item.dataset.doctor,
                timestamp: new Date(item.dataset.date + ' ' + item.dataset.time).getTime()
            }));

            // Initialize tooltips
            const tooltips = document.querySelectorAll('[title]');
            tooltips.forEach(tooltip => {
                new bootstrap.Tooltip(tooltip);
            });

            // Notification button click
            const notificationBtn = document.querySelector('.notification-btn');
            if (notificationBtn) {
                notificationBtn.addEventListener('click', function() {
                    showToast('Notifications feature coming soon!', 'info');
                });
            }
        });

        function filterAppointments() {
            const statusFilter = document.getElementById('statusFilter').value;
            const timeFilter = document.getElementById('timeFilter').value;
            const sortFilter = document.getElementById('sortFilter').value;

            const container = document.getElementById('appointmentsContainer');
            const loading = document.getElementById('loadingIndicator');

            // Show loading
            container.style.display = 'none';
            loading.style.display = 'block';

            // Simulate loading delay for better UX
            setTimeout(() => {
                // Filter appointments
                const filteredAppointments = allAppointments.filter(appointment => {
                    // Status filter
                    if (statusFilter !== 'all' && appointment.status !== statusFilter) {
                        return false;
                    }

                    // Time period filter
                    const now = new Date();
                    const appointmentDate = new Date(appointment.timestamp);

                    if (timeFilter === 'upcoming' && appointmentDate < now) {
                        return false;
                    }

                    if (timeFilter === 'past' && appointmentDate >= now) {
                        return false;
                    }

                    if (timeFilter === 'today') {
                        const today = new Date();
                        if (appointmentDate.toDateString() !== today.toDateString()) {
                            return false;
                        }
                    }

                    if (timeFilter === 'week') {
                        const weekFromNow = new Date();
                        weekFromNow.setDate(weekFromNow.getDate() + 7);
                        if (appointmentDate > weekFromNow || appointmentDate < now) {
                            return false;
                        }
                    }

                    if (timeFilter === 'month') {
                        const monthFromNow = new Date();
                        monthFromNow.setMonth(monthFromNow.getMonth() + 1);
                        if (appointmentDate > monthFromNow || appointmentDate < now) {
                            return false;
                        }
                    }

                    return true;
                });

                // Sort appointments
                filteredAppointments.sort((a, b) => {
                    switch (sortFilter) {
                        case 'date_asc':
                            return a.timestamp - b.timestamp;
                        case 'date_desc':
                            return b.timestamp - a.timestamp;
                        case 'status':
                            return a.status.localeCompare(b.status);
                        case 'doctor':
                            return a.doctor.localeCompare(b.doctor);
                        default:
                            return b.timestamp - a.timestamp;
                    }
                });

                // Update UI
                container.innerHTML = '';

                if (filteredAppointments.length > 0) {
                    const appointmentList = document.createElement('div');
                    appointmentList.className = 'appointment-list';

                    filteredAppointments.forEach(appointment => {
                        appointmentList.appendChild(appointment.element.cloneNode(true));
                    });

                    container.appendChild(appointmentList);
                } else {
                    container.innerHTML = `
                        <div class="empty-state">
                            <i class="fas fa-calendar-times"></i>
                            <h5>No appointments found</h5>
                            <p>Try adjusting your filters to see more results.</p>
                            <button class="btn-primary-action mt-3" onclick="resetFilters()">
                                <i class="fas fa-redo me-1"></i>Reset Filters
                            </button>
                        </div>
                    `;
                }

                // Hide loading and show results
                loading.style.display = 'none';
                container.style.display = 'block';

                // Reinitialize tooltips for new elements
                const newTooltips = container.querySelectorAll('[title]');
                newTooltips.forEach(tooltip => {
                    new bootstrap.Tooltip(tooltip);
                });

            }, 300); // Small delay for better UX
        }

        function resetFilters() {
            document.getElementById('statusFilter').value = 'all';
            document.getElementById('timeFilter').value = 'all';
            document.getElementById('sortFilter').value = 'date_desc';
            filterAppointments();
        }

        function setStatusFilter(status) {
            document.getElementById('statusFilter').value = status;
            filterAppointments();

            // Update active state in stats summary
            document.querySelectorAll('.stat-summary-item').forEach(item => {
                item.classList.remove('active');
            });

            if (status !== 'all') {
                const activeItem = document.querySelector(`.stat-summary-item[onclick*="${status}"]`);
                if (activeItem) {
                    activeItem.classList.add('active');
                }
            }
        }

        function cancelAppointment(appointmentId) {
            if (confirm('Are you sure you want to cancel this appointment? This action cannot be undone.')) {
                fetch('/patient/appointment/' + appointmentId + '/cancel', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast('Appointment cancelled successfully!', 'warning');
                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        } else {
                            showToast('Error: ' + data.message, 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showToast('Error cancelling appointment', 'danger');
                    });
            }
        }

        // Toast notification function
        function showToast(message, type = 'success') {
            // Remove existing toasts
            document.querySelectorAll('.toast-notification').forEach(toast => toast.remove());

            // Create toast element
            const toast = document.createElement('div');
            toast.className = `toast-notification toast-${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'exclamation-circle'} me-2"></i>
                ${message}
            `;

            // Add to page
            document.body.appendChild(toast);

            // Remove after 3 seconds
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.remove();
                }
            }, 3000);
        }
    </script>
{% endblock %}