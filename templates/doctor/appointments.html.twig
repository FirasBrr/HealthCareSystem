{# templates/doctor/appointments/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}MedicalApp - My Appointments{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Reuse your doctor dashboard CSS variables */
        :root {
            --primary: #2c7be5;
            --primary-light: #e3ebf8;
            --primary-dark: #1a68d1;
            --secondary: #6e84a3;
            --success: #00d97e;
            --success-light: #e6f9f0;
            --warning: #f6c343;
            --warning-light: #fef8e6;
            --danger: #e63757;
            --danger-light: #fce9ec;
            --info: #39afd1;
            --info-light: #eaf5f9;
            --light: #f9fbfd;
            --dark: #12263f;
            --gray-100: #f8f9fa;
            --gray-200: #e9ecef;
            --gray-300: #dee2e6;
            --gray-400: #ced4da;
            --gray-500: #adb5bd;
            --gray-600: #6c757d;
            --gray-700: #495057;
            --gray-800: #343a40;
            --gray-900: #212529;
            --prescription: #9b59b6;
            --prescription-light: #f3e8f7;
            --prescription-dark: #8e44ad;
            --sidebar-bg: #ffffff;
            --card-bg: #ffffff;
            --body-bg: #f5f7fb;
            --gradient-primary: linear-gradient(135deg, #2c7be5 0%, #1a68d1 100%);
            --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
            --border-radius: 0.75rem;
            --border-radius-sm: 0.5rem;
            --transition: all 0.3s ease;
        }

        body {
            background-color: var(--body-bg);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        /* Sidebar Navigation - Same as doctor dashboard */
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            border-right: 1px solid var(--gray-200);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .doctor-avatar {
            width: 50px;
            height: 50px;
            background: var(--gradient-primary);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            font-weight: 600;
        }

        .doctor-info h6 {
            margin-bottom: 0.25rem;
            font-weight: 600;
        }

        .doctor-info small {
            color: var(--gray-600);
            font-size: 0.85rem;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1.5rem;
            overflow-y: auto;
        }

        .nav-section {
            margin-bottom: 2rem;
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--gray-600);
            letter-spacing: 0.5px;
            margin-bottom: 1rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--gray-700);
            text-decoration: none;
            margin-bottom: 0.5rem;
            transition: var(--transition);
            font-weight: 500;
        }

        .nav-item:hover {
            background: var(--primary-light);
            color: var(--primary);
            transform: translateX(5px);
        }

        .nav-item.active {
            background: var(--gradient-primary);
            color: white;
            box-shadow: 0 4px 12px rgba(44, 123, 229, 0.3);
        }

        .nav-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            background: var(--gray-100);
            color: var(--gray-600);
            transition: var(--transition);
        }

        .nav-item:hover .nav-icon {
            background: white;
        }

        .nav-item.active .nav-icon {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid var(--gray-200);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius-sm);
            color: var(--danger);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

        .logout-btn:hover {
            background: var(--danger-light);
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 2rem;
            max-width: calc(100% - 280px);
        }

        /* Top Header */
        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .header-left h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .header-left p {
            color: var(--gray-600);
            margin: 0;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .date-badge {
            background: var(--primary-light);
            color: var(--primary);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .notification-btn {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--gray-100);
            border: none;
            color: var(--gray-600);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            transition: var(--transition);
        }

        .notification-btn:hover {
            background: var(--gray-200);
            color: var(--gray-700);
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--danger);
            color: white;
            font-size: 0.7rem;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Dashboard Section */
        .dashboard-section {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-header h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }

        .section-actions {
            display: flex;
            gap: 0.5rem;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .stat-card {
            background: var(--card-bg);
            border-radius: var(--border-radius-sm);
            padding: 1rem;
            border: 1px solid var(--gray-200);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
        }

        .stat-card.total::before { background: var(--primary); }
        .stat-card.pending::before { background: var(--warning); }
        .stat-card.confirmed::before { background: var(--success); }
        .stat-card.completed::before { background: var(--info); }
        .stat-card.cancelled::before { background: var(--danger); }

        .stat-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .stat-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }

        .stat-card.total .stat-icon {
            background: var(--primary-light);
            color: var(--primary);
        }

        .stat-card.pending .stat-icon {
            background: var(--warning-light);
            color: var(--warning);
        }

        .stat-card.confirmed .stat-icon {
            background: var(--success-light);
            color: var(--success);
        }



        .stat-card.cancelled .stat-icon {
            background: var(--danger-light);
            color: var(--danger);
        }

        .stat-numbers h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
            color: var(--dark);
        }

        .stat-numbers p {
            color: var(--gray-600);
            font-size: 0.85rem;
            margin: 0;
        }

        /* Filters */
        .filter-card {
            background: var(--gray-100);
            border-radius: var(--border-radius-sm);
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .filter-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            align-items: end;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-control, .form-select {
            border-radius: var(--border-radius-sm);
            border: 1px solid var(--gray-300);
            padding: 0.5rem 0.75rem;
            font-size: 0.9rem;
            transition: var(--transition);
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(44, 123, 229, 0.1);
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: var(--border-radius-sm);
            font-weight: 500;
            transition: var(--transition);
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(44, 123, 229, 0.3);
        }

        .btn-outline-primary {
            background: transparent;
            border: 1px solid var(--primary);
            color: var(--primary);
        }

        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }

        /* Appointment Cards */
        .appointment-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .appointment-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            background: var(--gray-100);
            border-radius: var(--border-radius-sm);
            transition: var(--transition);
            border-left: 4px solid transparent;
        }

        .appointment-item:hover {
            background: var(--gray-200);
            transform: translateX(5px);
        }

        .appointment-item.pending { border-left-color: var(--warning); }
        .appointment-item.confirmed { border-left-color: var(--success); }
        .appointment-item.cancelled { border-left-color: var(--danger); }

        .appointment-time {
            min-width: 100px;
            text-align: center;
            padding: 0.5rem;
            background: white;
            border-radius: 8px;
            margin-right: 1rem;
        }

        .appointment-time .time {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark);
            display: block;
        }

        .appointment-time .date {
            font-size: 0.85rem;
            color: var(--gray-600);
        }

        .patient-info {
            flex: 1;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .patient-avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: var(--gradient-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 1rem;
        }

        .patient-details h6 {
            font-weight: 600;
            margin-bottom: 0.25rem;
            color: var(--dark);
        }

        .patient-details p {
            color: var(--gray-600);
            font-size: 0.85rem;
            margin: 0;
        }

        .appointment-status {
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-pending {
            background: var(--warning-light);
            color: var(--warning);
        }

        .status-confirmed {
            background: var(--success-light);
            color: var(--success);
        }

        .status-cancelled {
            background: var(--danger-light);
            color: var(--danger);
        }

        .appointment-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            border: none;
            font-size: 0.85rem;
            font-weight: 500;
            transition: var(--transition);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-confirm {
            background: var(--success);
            color: white;
        }

        .btn-confirm:hover {
            background: #00b86c;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 217, 126, 0.3);
        }

        .btn-prescribe {
            background: var(--prescription);
            color: white;
        }

        .btn-prescribe:hover {
            background: var(--prescription-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(155, 89, 182, 0.3);
        }

        .btn-cancel {
            background: var(--danger-light);
            color: var(--danger);
        }

        .btn-cancel:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-2px);
        }

        .btn-complete {
            background: var(--info);
            color: white;
        }

        .btn-complete:hover {
            background: #2a9ec1;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(57, 175, 209, 0.3);
        }

        .btn-disabled {
            background: var(--gray-300);
            color: var(--gray-600);
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            border: none;
            font-size: 0.85rem;
            font-weight: 500;
            cursor: not-allowed;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            opacity: 0.7;
        }

        .prescribed-badge {
            background: var(--success-light);
            color: var(--success);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            border: 1px solid var(--success);
        }

        .prescribed-badge i {
            font-size: 1rem;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--gray-600);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--gray-400);
        }

        .empty-state h5 {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        /* Flash Messages */
        .alert {
            border-radius: var(--border-radius-sm);
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 1.5rem;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .sidebar {
                width: 250px;
            }
            .main-content {
                margin-left: 250px;
                max-width: calc(100% - 250px);
            }
        }

        @media (max-width: 992px) {
            .dashboard-wrapper {
                flex-direction: column;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: static;
                margin-bottom: 1rem;
            }
            .main-content {
                margin-left: 0;
                max-width: 100%;
                padding: 1rem;
            }
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            .filter-form {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
            .top-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            .header-right {
                width: 100%;
                justify-content: space-between;
            }
            .appointment-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            .appointment-time {
                width: 100%;
                text-align: left;
            }
            .appointment-actions {
                width: 100%;
                justify-content: flex-end;
            }
        }
    </style>
    <!-- Add Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="dashboard-wrapper">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="doctor-avatar">
                    {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
                </div>
                <div class="doctor-info">
                    <h6>Dr. {{ app.user.firstName }} {{ app.user.lastName }}</h6>
                    <small>{{ app.user.doctor.specialty ?? 'Medical Professional' }}</small>
                </div>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Main</div>
                    <a href="{{ path('doctor_dashboard') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        Dashboard
                    </a>
                    <a href="{{ path('doctor_appointments') }}" class="nav-item active">
                        <div class="nav-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        Appointments
                    </a>
                    <a href="{{ path('doctor_prescriptions') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-file-prescription"></i>
                        </div>
                        Prescriptions
                    </a>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Schedule</div>
                    <a href="{{ path('doctor_availability') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        Availability
                    </a>
                    <a href="{{ path('doctor_patients') }}" class="nav-item">
                        <div class="nav-icon">
                            <i class="fas fa-user-friends"></i>
                        </div>
                        My Patients
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <a href="{{ path('app_logout') }}" class="logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Header -->
            <div class="top-header">
                <div class="header-left">
                    <h1>My Appointments</h1>
                    <p>Manage and view all your scheduled appointments</p>
                </div>
                <div class="header-right">
                    <div class="date-badge">
                        <i class="fas fa-calendar-day me-2"></i>{{ "now"|date("l, F j, Y") }}
                    </div>

                </div>
            </div>

            <!-- Flash Messages -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <!-- Stats Overview -->
            <div class="stats-grid">
                <div class="stat-card total">
                    <div class="stat-content">
                        <div>
                            <div class="stat-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div class="stat-numbers">
                                <h3>{{ stats.total|default(0) }}</h3>
                                <p>Total Appointments</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="stat-card pending">
                    <div class="stat-content">
                        <div>
                            <div class="stat-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="stat-numbers">
                                <h3>{{ stats.pending|default(0) }}</h3>
                                <p>Pending</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="stat-card confirmed">
                    <div class="stat-content">
                        <div>
                            <div class="stat-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="stat-numbers">
                                <h3>{{ stats.confirmed|default(0) }}</h3>
                                <p>Confirmed</p>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="stat-card cancelled">
                    <div class="stat-content">
                        <div>
                            <div class="stat-icon">
                                <i class="fas fa-ban"></i>
                            </div>
                            <div class="stat-numbers">
                                <h3>{{ stats.cancelled|default(0) }}</h3>
                                <p>Cancelled</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Two Column Layout -->
            <div class="row">
                <!-- Main Appointments Column -->
                <div class="col-lg-8">
                    <div class="dashboard-section">
                        <div class="section-header">
                            <h3><i class="fas fa-calendar-alt me-2 text-primary"></i>All Appointments</h3>
                            <div class="section-actions">
                                <button class="btn btn-outline-primary btn-sm" onclick="resetFilters()">
                                    <i class="fas fa-redo me-1"></i> Reset Filters
                                </button>
                            </div>
                        </div>

                        <!-- Filters -->
                        <div class="filter-card">
                            <form method="get" class="filter-form" id="filterForm">
                                <div class="form-group">
                                    <label class="form-label small">Status</label>
                                    <select name="status" class="form-select" onchange="this.form.submit()">
                                        <option value="all" {{ currentFilters.status == 'all' or not currentFilters.status ? 'selected' : '' }}>All Status</option>
                                        <option value="Pending" {{ currentFilters.status == 'Pending' ? 'selected' : '' }}>Pending</option>
                                        <option value="Confirmed" {{ currentFilters.status == 'Confirmed' ? 'selected' : '' }}>Confirmed</option>
                                        <option value="Cancelled" {{ currentFilters.status == 'Cancelled' ? 'selected' : '' }}>Cancelled</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="form-label small">Date</label>
                                    <input type="date" name="date" class="form-control" value="{{ currentFilters.date }}" onchange="this.form.submit()">
                                </div>

                                <div class="form-group">
                                    <label class="form-label small">Search Patient</label>
                                    <div class="input-group">
                                        <input type="text" name="search" class="form-control" placeholder="Name or phone..." value="{{ currentFilters.search }}">                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        {% if appointments|length > 0 %}
                            <div class="appointment-list">
                                {% for appointment in appointments %}
                                    <div class="appointment-item {{ appointment.status|lower }}">
                                        <div class="appointment-time">
                                            <span class="time">{{ appointment.startDateTime|date('h:i A') }}</span>
                                            <span class="date">{{ appointment.startDateTime|date('M j, Y') }}</span>
                                        </div>
                                        <div class="patient-info">
                                            <div class="patient-avatar">
                                                {{ appointment.patient.client.firstName|first|upper }}{{ appointment.patient.client.lastName|first|upper }}
                                            </div>
                                            <div class="patient-details">
                                                <h6>{{ appointment.patient.client.firstName }} {{ appointment.patient.client.lastName }}</h6>
                                                <p><i class="fas fa-phone me-1"></i>{{ appointment.patient.phone ?? 'No phone' }}</p>
                                            </div>
                                        </div>
                                        <span class="appointment-status status-{{ appointment.status|lower }}">
                                            {{ appointment.status }}
                                        </span>
                                        <div class="appointment-actions">
                                            {% if appointment.status == 'Pending' %}
                                                <button class="btn-action btn-confirm" onclick="confirmAppointment({{ appointment.id }})" title="Confirm Appointment">
                                                    <i class="fas fa-check"></i> Confirm
                                                </button>
                                                <button class="btn-action btn-cancel" onclick="cancelAppointment({{ appointment.id }})" title="Cancel Appointment">
                                                    <i class="fas fa-times"></i> Cancel
                                                </button>

                                            {% elseif appointment.status == 'Confirmed' %}
                                                {% set now = "now"|date_modify("0 minute") %}
                                                {% set appointmentEnd = appointment.endDateTime|date_modify("0 minute") %}

                                                {% if appointmentEnd <= now and not appointment.prescription %}

                                                    <a href="{{ path('doctor_prescription_upload', {'id': appointment.id}) }}" class="btn-action btn-prescribe" title="Upload Prescription">
                                                        <i class="fas fa-file-prescription"></i> Prescribe
                                                    </a>
                                                {% elseif appointmentEnd <= now and appointment.prescription %}
                                                    <span class="prescribed-badge" title="Prescription uploaded">
                                                        <i class="fas fa-file-medical me-1"></i> Prescribed
                                                    </span>
                                                {% else %}
                                                    <span class="btn-action btn-disabled" title="Appointment not yet ended">
                                                        <i class="fas fa-clock me-1"></i> Ongoing
                                                    </span>
                                                {% endif %}

                                            {% elseif appointment.status == 'Completed' %}
                                                {% if appointment.prescription %}
                                                    <span class="prescribed-badge" title="Prescription uploaded">
                                                        <i class="fas fa-file-medical me-1"></i> Prescribed
                                                    </span>
                                                {% else %}
                                                    <a href="{{ path('doctor_prescription_upload', {'id': appointment.id}) }}" class="btn-action btn-prescribe" title="Upload Prescription">
                                                        <i class="fas fa-file-prescription"></i> Prescribe
                                                    </a>
                                                {% endif %}

                                            {% elseif appointment.status == 'Cancelled' %}

                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state">
                                <i class="fas fa-calendar-times"></i>
                                <h5>No appointments found</h5>
                                <p class="text-muted mb-4">Try adjusting your filters or check back later.</p>
                                <button class="btn btn-primary" onclick="resetFilters()">
                                    <i class="fas fa-redo me-1"></i> Reset Filters
                                </button>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Upcoming Appointments Column -->
                <div class="col-lg-4">
                    <div class="dashboard-section">
                        <div class="section-header">
                            <h3><i class="fas fa-calendar-check me-2 text-success"></i>Upcoming Appointments</h3>
                        </div>

                        {% if upcomingAppointments|length > 0 %}
                            <div class="appointment-list">
                                {% for appointment in upcomingAppointments %}
                                    <div class="appointment-item confirmed">
                                        <div class="appointment-time">
                                            <span class="time">{{ appointment.startDateTime|date('h:i A') }}</span>
                                            <span class="date">{{ appointment.startDateTime|date('M j') }}</span>
                                        </div>
                                        <div class="patient-info">
                                            <div class="patient-avatar">
                                                {{ appointment.patient.client.firstName|first|upper }}{{ appointment.patient.client.lastName|first|upper }}
                                            </div>
                                            <div class="patient-details">
                                                <h6>{{ appointment.patient.client.firstName }}</h6>
                                                <small class="text-muted">{{ appointment.startDateTime|date('D') }}</small>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state">
                                <i class="fas fa-calendar-plus"></i>
                                <h5>No upcoming appointments</h5>
                                <p class="text-muted">Check back later for new bookings.</p>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Quick Stats -->
                    <div class="dashboard-section">
                        <div class="section-header">
                            <h3><i class="fas fa-chart-bar me-2 text-info"></i>Quick Stats</h3>
                        </div>
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-content">
                                    <div class="stat-icon">
                                        <i class="fas fa-user-md"></i>
                                    </div>
                                    <div class="stat-numbers">
                                        <h6 class="mb-1">{{ app.user.doctor.rating ?? '4.8' }}</h6>
                                        <small class="text-muted">Rating</small>
                                    </div>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-content">
                                    <div class="stat-icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="stat-numbers">
                                        <h6 class="mb-1">{{ stats.total|default(0) }}</h6>
                                        <small class="text-muted">Total Patients</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function confirmAppointment(appointmentId) {
            if (confirm('Are you sure you want to confirm this appointment?')) {
                fetch('{{ path('doctor_appointment_confirm', {'id': 'PLACEHOLDER'}) }}'.replace('PLACEHOLDER', appointmentId), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast('Appointment confirmed!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showToast('Error: ' + data.message, 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showToast('Error confirming appointment', 'danger');
                    });
            }
        }

        function cancelAppointment(appointmentId) {
            if (confirm('Are you sure you want to cancel this appointment? This action cannot be undone.')) {
                fetch('{{ path('doctor_appointment_cancel', {'id': 'PLACEHOLDER'}) }}'.replace('PLACEHOLDER', appointmentId), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast('Appointment cancelled!', 'warning');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showToast('Error: ' + data.message, 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showToast('Error cancelling appointment', 'danger');
                    });
            }
        }

        function completeAppointment(appointmentId) {
            if (confirm('Mark this appointment as completed?')) {
                fetch('{{ path('doctor_appointment_complete', {'id': 'PLACEHOLDER'}) }}'.replace('PLACEHOLDER', appointmentId), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showToast('Appointment marked as completed!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showToast('Error: ' + data.message, 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showToast('Error completing appointment', 'danger');
                    });
            }
        }

        function resetFilters() {
            window.location.href = '{{ path('doctor_appointments') }}';
        }

        // Toast notification function
        function showToast(message, type = 'success') {
            // Remove existing toasts
            document.querySelectorAll('.toast-notification').forEach(toast => toast.remove());

            // Create toast element
            const toast = document.createElement('div');
            toast.className = `toast-notification toast-${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'exclamation-circle'} me-2"></i>
                ${message}
            `;

            // Add to page
            document.body.appendChild(toast);

            // Remove after 3 seconds
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.remove();
                }
            }, 3000);
        }

        // Add CSS for toast notifications
        const style = document.createElement('style');
        style.textContent = `
            .toast-notification {
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 1rem 1.5rem;
                border-radius: var(--border-radius-sm);
                background: white;
                box-shadow: var(--shadow-lg);
                z-index: 9999;
                display: flex;
                align-items: center;
                animation: slideIn 0.3s ease;
                border-left: 4px solid;
            }
            .toast-success {
                border-left-color: var(--success);
                color: var(--success);
            }
            .toast-warning {
                border-left-color: var(--warning);
                color: var(--warning);
            }
            .toast-danger {
                border-left-color: var(--danger);
                color: var(--danger);
            }
            @keyframes slideIn {
                from {
                    transform: translateX(100%);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }
        `;
        document.head.appendChild(style);

        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            const tooltips = document.querySelectorAll('[title]');
            tooltips.forEach(tooltip => {
                new bootstrap.Tooltip(tooltip);
            });

            // Notification button click
            const notificationBtn = document.querySelector('.notification-btn');
            if (notificationBtn) {
                notificationBtn.addEventListener('click', function() {
                    // In a real app, this would show notifications
                    showToast('Notifications feature coming soon!', 'info');
                });
            }
        });
    </script>
{% endblock %}