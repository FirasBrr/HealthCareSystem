            function copyWeekSchedule() {
                if (confirm('Copy this week\'s schedule to next week?')) {
                    fetch('{{ path('doctor_availability_copy_week') }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                        .then(response => {
                            if (response.ok) {
                                showToast('Week schedule copied successfully!', 'success');
                                setTimeout(() => location.reload(), 1500);
