{# templates/admin/doctors/form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ doctor.id ? 'Edit' : 'New' }} Doctor â€¢ Admin{% endblock %}

{% block body %}
    <section class="dashboard-section">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">{{ doctor.id ? 'Edit' : 'Add New' }} Doctor</h4>
                        </div>
                        <div class="card-body p-4">
                            {{ form_start(form) }}
                            <div class="row g-3">
                                {% for child in form %}
                                    {% if child.vars.name != '_token' %}
                                        <div class="col-12{% if child.vars.name != 'bio' %} col-md-6{% endif %}">
                                            {{ form_row(child, {
                                                'attr': {'class': 'form-control'},
                                                'row_attr': {'class': 'mb-3'}
                                            }) }}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary">Save Doctor</button>
                                <a href="{{ path('admin_doctors') }}" class="btn btn-secondary">Cancel</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}