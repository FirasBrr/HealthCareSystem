{% extends 'base.html.twig' %}

{% block title %}MedicalApp - Book Doctor Appointments Online{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #2c7be5;
            --primary-dark: #1a68d1;
            --secondary: #6e84a3;
            --success: #00d97e;
            --light: #f9fbfd;
            --dark: #12263f;
            --gradient: linear-gradient(135deg, #2c7be5 0%, #6e84a3 100%);
        }

        .hero-section {
            background: var(--gradient);
            color: white;
            padding: 100px 0;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000" opacity="0.1"><path fill="white" d="M500,250c138,0,250,112,250,250S638,750,500,750S250,638,250,500S362,250,500,250z"/></svg>') repeat;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 300;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .btn-hero {
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 50px;
            border: none;
            transition: all 0.3s ease;
            margin: 0 10px 10px 0;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
        }

        .btn-primary-custom {
            background: white;
            color: var(--primary) !important;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            background: var(--light);
            color: var(--primary) !important;
        }

        .btn-secondary-custom {
            background: rgba(255, 255, 255, 0.2);
            color: white !important;
            border: 2px solid white;
            backdrop-filter: blur(10px);
        }

        .btn-secondary-custom:hover {
            background: white;
            color: var(--primary) !important;
            transform: translateY(-2px);
            border-color: white;
        }

        .features-section {
            padding: 100px 0;
            background: var(--light);
        }

        .feature-card {
            background: white;
            border-radius: 15px;
            padding: 40px 30px;
            text-align: center;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
            border: none;
            height: 100%;
        }

        .feature-card:hover {
            transform: translateY(-10px);
        }

        .feature-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            color: white;
            font-size: 2rem;
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 15px;
        }

        .feature-description {
            color: var(--secondary);
            line-height: 1.6;
        }

        .stats-section {
            padding: 80px 0;
            background: white;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary);
            display: block;
        }

        .stat-label {
            color: var(--secondary);
            font-size: 1.1rem;
        }

        .cta-section {
            background: var(--dark);
            color: white;
            padding: 80px 0;
            text-align: center;
        }

        .cta-title {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .wave-divider {
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            line-height: 0;
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }

            .btn-hero {
                display: block;
                width: 100%;
                margin: 10px 0;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
