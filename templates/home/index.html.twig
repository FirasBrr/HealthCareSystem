            <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="white"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="white"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="white"></path>
            </svg>
        </div>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 mx-auto text-center hero-content">
                    <h1 class="hero-title">Your Health, Our Priority</h1>
                    <p class="hero-subtitle">Book appointments with trusted doctors and specialists in your area</p>
                    <div class="mt-4">
                        {% if not app.user %}
                            <a href="{{ path('app_register') }}" class="btn btn-hero btn-primary-custom">
                                <i class="fas fa-user-plus me-2"></i>Get Started Free
                            </a>
                            <a href="{{ path('app_login') }}" class="btn btn-hero btn-primary-custom">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                        {% else %}
                            <a href="{{ path('app_dashboard') }}" class="btn btn-hero btn-primary-custom">
                                <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-lg-8 mx-auto">
                    <h2 class="display-4 mb-4" style="color: var(--dark);">Why Choose MedicalApp?</h2>
                    <p class="lead" style="color: var(--secondary);">Experience healthcare made simple and accessible</p>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h3 class="feature-title">Easy Booking</h3>
                        <p class="feature-description">Book appointments 24/7 with our easy-to-use platform. No more waiting on hold.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <h3 class="feature-title">Verified Doctors</h3>
                        <p class="feature-description">All our healthcare providers are verified and rated by patients like you.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-bell"></i>
                        </div>
                        <h3 class="feature-title">Smart Reminders</h3>
                        <p class="feature-description">Get automatic reminders for your appointments and follow-ups.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <span class="stat-number">500+</span>
                    <span class="stat-label">Verified Doctors</span>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <span class="stat-number">10K+</span>
                    <span class="stat-label">Happy Patients</span>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <span class="stat-number">50+</span>
                    <span class="stat-label">Specialties</span>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <span class="stat-number">24/7</span>
                    <span class="stat-label">Support</span>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <h2 class="cta-title">Ready to Take Control of Your Health?</h2>
            <p class="lead mb-4">Join thousands of patients who trust MedicalApp for their healthcare needs</p>
            {% if not app.user %}
                <a href="{{ path('app_register') }}" class="btn btn-hero btn-primary-custom">
                    <i class="fas fa-rocket me-2"></i>Start Your Journey Today
                </a>
            {% else %}
                <a href="{{ path('app_doctors') }}" class="btn btn-hero btn-primary-custom">
                    <i class="fas fa-search me-2"></i>Find a Doctor
                </a>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Add some interactive animations
        document.addEventListener('DOMContentLoaded', function() {
            // Animate feature cards on scroll
            const featureCards = document.querySelectorAll('.feature-card');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            featureCards.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(card);
            });
        });
    </script>
{% endblock %}