{% extends 'base.html.twig' %}

{% block title %}MedicalApp - Appointment #{{ appointment.reference }}{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0 text-gray-800">Appointment Details</h1>
                <p class="text-muted mb-0">Reference: {{ appointment.reference }}</p>
            </div>

        </div>

        <div class="row">
            <!-- Main Appointment Info -->
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Appointment Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Date & Time</h6>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar text-primary me-3 fa-lg"></i>
                                    <div>
                                        <h5 class="mb-0">{{ appointment.startDateTime|date('l, F j, Y') }}</h5>
                                        <p class="text-muted mb-0">
                                            {{ appointment.startDateTime|date('h:i A') }} - {{ appointment.endDateTime|date('h:i A') }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Status</h6>
                                {% set statusClass = 'status-' ~ appointment.status|lower %}
                                <span class="status-badge {{ statusClass }} fs-6">
                                    <i class="fas fa-circle me-1" style="font-size: 8px;"></i>
                                    {{ appointment.status }}
                                </span>
                            </div>
                        </div>

                        <hr>

                        <!-- Doctor Information -->
                        <h5 class="mb-3">Doctor Information</h5>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-lg me-3 bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fas fa-user-md fa-2x text-info"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">Dr. {{ appointment.doctor.client.firstName }} {{ appointment.doctor.client.lastName }}</h5>
                                        <p class="text-muted mb-1">{{ appointment.doctor.specialty }}</p>
                                        <p class="mb-0">
                                            <i class="fas fa-envelope me-1"></i>
                                            {{ appointment.doctor.client.email }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mt-3 mt-md-0">
                                    <p class="mb-2">
                                        <i class="fas fa-phone me-2"></i>
                                        <strong>Phone:</strong> {{ appointment.doctor.phone|default('Not provided') }}
                                    </p>
                                    {% if appointment.doctor.bio %}
                                        <p class="mb-2">
                                            <i class="fas fa-file-alt me-2"></i>
                                            <strong>Bio:</strong> {{ appointment.doctor.bio }}
                                        </p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <hr>

                        <!-- Patient Information -->
                        <h5 class="mb-3">Patient Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-lg me-3 bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="fas fa-user fa-2x text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">{{ appointment.patient.client.firstName }} {{ appointment.patient.client.lastName }}</h5>
                                        <p class="text-muted mb-1">Patient ID: PAT{{ "%04d"|format(appointment.patient.id) }}</p>
                                        <p class="mb-0">
                                            <i class="fas fa-envelope me-1"></i>
                                            {{ appointment.patient.client.email }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mt-3 mt-md-0">
                                    <p class="mb-2">
                                        <i class="fas fa-phone me-2"></i>
                                        <strong>Phone:</strong> {{ appointment.patient.phone|default('Not provided') }}
                                    </p>
                                    {% if appointment.patient.address %}
                                        <p class="mb-2">
                                            <i class="fas fa-home me-2"></i>
                                            <strong>Address:</strong> {{ appointment.patient.address }}
                                        </p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Prescription Information -->
                {% if appointment.prescription %}
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-success">
                                <i class="fas fa-prescription me-2"></i>Prescription
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6>{{ appointment.prescription.notes|default('Prescription notes') }}</h6>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-calendar me-1"></i>
                                        Uploaded: {{ appointment.prescription.uploadedAt|date('M d, Y h:i A') }}
                                    </p>
                                </div>
                                <div>
                                    {% if appointment.prescription.fileUrl %}
                                        <a href="{{ asset('uploads/prescriptions/' ~ appointment.prescription.fileUrl) }}"
                                           target="_blank"
                                           class="btn btn-success">
                                            <i class="fas fa-download me-2"></i>Download
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}